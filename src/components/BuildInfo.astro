---
import { execSync } from "child_process";

const commit = execSync("git rev-parse --short HEAD", { encoding: "utf-8" });
const date   = execSync(`git log --format=%B -n 1 ${commit}`, {encoding: "utf-8" }).split("--")[0];
---

<div class="build">
    Web built on {date} with commit <a href="https://github.com/elpekenin/astro-web">{commit}</a>
</div>

<style>
    a {
        color: white;
        text-decoration: none;
    }
    a:link {
        color: green;
    }
    a:visited {
        color: red;
    }
    a:hover {
        font-style: italic;
        text-decoration: underline double;
    }
</style>