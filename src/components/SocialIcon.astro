---
import { Icon } from 'astro-icon'

export interface Props {
	href: string;
	icon: string;
	width?: string;
	color?: string;
}

const { href, icon, width, color } = Astro.props;

const _width = width ? width : "50px";
const _color = color ? color : "black";
---

<div class="icon-container">
	<a href={href}>
		<Icon 
			name={icon}
			width={_width}
			class="social-icon"
		/>
	</a>
</div>


<style define:vars={{color: _color}}>
	.social-icon {
		color: black;
		padding: 10px;
	}
	.icon-container:hover{
		background: #0F2027;  /* fallback for old browsers */
		background: -webkit-linear-gradient(45deg, #2C5364, #203A43, #0F2027);  /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(45deg, #2C5364, #203A43, #0F2027); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	}
	.icon-container:hover .social-icon {
		color: var(--color);
	}
</style>
