---
import SocialIcon from "../components/SocialIcon.astro";

const totalWidth   = 20;
const elementCount = 6;
const elementWidth = `${totalWidth/elementCount}vw`;
---

<div id="social-networks">
    <SocialIcon
        color="#6e5494"
        href="https://github.com/elpekenin"
        icon="mdi:github"
        width={elementWidth}
    />
    <SocialIcon
        color=" #2AABEE"
        href="https://t.me/elpekenin"
        icon="mdi:telegram"
        width={elementWidth}
    />
    <SocialIcon
        color="#7289da"
        href="https://discord.com/users/elpeke%C3%B1in#2234"
        icon="mdi:discord"
        width={elementWidth}
    />
    <SocialIcon
        color="#1DA1F2"
        href="https://twitter.com/elpekenin_dev"
        icon="mdi:twitter"
        width={elementWidth}
    />
    <SocialIcon
        color="#6441a5"
        href="https://twitch.tv/elpekenin"
        icon="mdi:twitch"
        width={elementWidth}
    />
    <SocialIcon
        color="#ea4335"
        href="mailto:elpekenin@elpekenin.dev"
        icon="mdi:gmail"
        width={elementWidth}
    />
</div>

<style>
    div {
        display: flex;
        justify-content: right;
    }
    div a {
        position: absolute;
        top: 50%;
    }
</style>